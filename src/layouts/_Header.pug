header.l-header
  a.l-header__img-mask(href=baseUrl) 
    img(src=`${baseUrl}/img/logo/logo2.png`, alt="85DegreeC logo")
    
  //- input#nav-switcher(type="checkbox" hidden)

  //- label.o-burger.l-header__burger(for="nav-switcher")
