mixin ArtistCard(options)
  -
    // Object.assign(預設物件, 傳進來的物件) 
    // 用來合併預設物件值及傳進來的 options 值
    const props = Object.assign({
      name: '',
      img: '',
      hoverImg: '',
      size: '', // md, lg
      direction: '', // reverse
      link: '##'
    }, options);

    const classes = [
      props.size ? `--size-${props.size}` : '',
      props.direction ? `--${props.direction}` : '',
    ];

  //- classes.join(' ') => "--size-lg --reverse"
  article.c-artist-card(class=classes.join(' ') data-aos="fade-up")
    a.c-artist-card__link(herf=props.link)
      h3.u-text-xl.u-fw-900 #{props.name}
      .u-img-ratio.c-artist-card__img-mask
        img.u-object-fit.--abs(src=props.hoverImg, alt=`${props.name} 去背照`)
        //- img.u-object-fit.--abs(src="img/lineup/breads.jpg", alt="麵包 Breads 形象照")
        img.u-object-fit.--abs(src=props.img, alt=`${props.name} 形象照`)
